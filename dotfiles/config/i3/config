    #tray_output eDP1

    bindsym button4 nop
    bindsym button5 nop
    #font xft:Noto Sans,Icons 10.5
    #font xft:Input Sans Narrow,Icons:size=6.875
    #font xft:Input Sans Narrow,Icons:size=5.5
    #font xft:Input Sans Narrow,Icons:pixelsize=5.5
    font pango:Input Sans Narrow,Icons 6.875
    #strip_workspace_numbers yes

    colors {
        #background $transparent
        background #2B2C2B
        statusline #F9FAF9
        separator  #454947

        #                  border  backgr. text
        focused_workspace  #F9FAF9 #16A085 #2B2C2B
        active_workspace   #595B5B #353836 #FDF6E3
        inactive_workspace #595B5B #353836 #EEE8D5
        urgent_workspace   #16A085 #FDF6E3 #E5201D
    }
}

