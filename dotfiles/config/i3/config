set $ws11 [:clango
set $ws12 "]:sadrobot"

workspace $ws1 output eDP-1-1
workspace $ws2 output eDP-1-1
workspace $ws3 output eDP-1-1
workspace $ws4 output eDP-1-1
workspace $ws5 output eDP-1-1
